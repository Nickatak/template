# Django Settings
DEBUG=True
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
DATABASE_URL=sqlite:///db.sqlite3
# Docker MySQL example:
# DATABASE_URL=mysql://template:template@mysql:3306/template

# JWT Configuration
JWT_SECRET=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000/api

# Email (Optional)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Docker MySQL credentials
MYSQL_DATABASE=template
MYSQL_USER=template
MYSQL_PASSWORD=template
MYSQL_ROOT_PASSWORD=root

# Production-like (docker-compose.staging.yml) overrides
STAGING_DATABASE_URL=
STAGING_ALLOWED_HOSTS=
STAGING_CORS_ALLOWED_ORIGINS=
STAGING_NEXT_PUBLIC_API_URL=
STAGING_MYSQL_DATABASE=
STAGING_MYSQL_USER=
STAGING_MYSQL_PASSWORD=
STAGING_MYSQL_ROOT_PASSWORD=
